<%- include('../partials/header')  %>

<% if (info.show) { %>
<div class="card-info bg-<%= info.type %> mb-3">
  <%= info.message %>
</div>
<% } %>


<div style="display: flex; justify-content: center; align-items: center;">
  <div class="card" style="width: 350px;">
    <h3 class="text-accent text-center">Login</h3>

    <form action="/auth/login" method="POST" class="form" role="form">
      <div class="form-group">
        <label for="username">Username</label>
        <input id="username" type="text" class="form-control" name="username" placeholder="Masukan username"
          autocomplete="off" autofocus required>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input id="password" type="password" class="form-control" name="password" placeholder="Masukan password"
          required>
      </div>

      <button type="submit" name="" class="btn btn-gradient mt-2">Login</button>
      <button class="btn btn-secondary">
        <a href="/auth/register" class="text-white">Register</a>
      </button>
    </form>
  </div>
</div>

<%- include('../partials/footer')  %>