<%- include('../../partials/header')  %>

<div class="card">
  <form action="/admin/articles" method="post">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" id="title" name="title" placeholder="Masukkan judul blog" class="form-control">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea name="description" id="description" class="form-control" placeholder="Masukkan deskripsi blog"
        rows="1"></textarea>
    </div>
    <div class="form-group">
      <label for="markdown">Markdown</label>
      <textarea name="markdown" id="markdown" class="form-control" rows="30" placeholder="Tulis blog"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <button class="btn btn-secondary"><a href="/admin/articles" style="color: white;">Cancel</a></button>
  </form>
</div>

<%- include('../../partials/footer')  %>